{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      4
    ],
    "max-len": [
      "warning",
      100
    ],
    "security/no-inline-assembly": "warning",
    "security/no-assign-params": "warning"
  }
}